---
import { ArrowRight, Phone, Zap, Shield, Award } from 'lucide-astro';
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden py-36">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-600"></div>
  <div class="absolute inset-0 bg-black/20"></div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23ffffff%22%20fill-opacity%3D%220.1%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E'); background-repeat: repeat;"></div>
  </div>

  <div class="relative z-10 container-custom text-center text-white">
    <div class="animate-on-scroll">
      <!-- Badge -->
      <div class="inline-flex items-center space-x-2 glass rounded-full px-4 py-2 mb-6">
        <Award class="w-4 h-4 text-accent-400" />
        <span class="text-sm font-medium">+15 años de experiencia</span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
        Expertos en
        <span class="text-gradient bg-gradient-to-r from-accent-400 to-yellow-400 bg-clip-text text-transparent">
          aires acondicionados
        </span>
        en Sevilla
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto leading-relaxed">
        Venta, instalación y mantenimiento de sistemas de aire acondicionado. 
        Soluciones profesionales para tu hogar y empresa.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="/contacto" class="btn-accent text-lg px-8 py-4 group">
          Solicitar presupuesto
          <ArrowRight class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1" />
        </a>
        <a href="tel:954647966" class="btn-secondary bg-white/10 border-white/30 text-white hover:bg-white/20 text-lg px-8 py-4 group">
          <Phone class="mr-2 w-5 h-5" />
          Llamar ahora
        </a>
      </div>

      <!-- Features -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <div class="glass rounded-lg p-6 text-center">
          <Zap class="w-8 h-8 text-accent-400 mx-auto mb-3" />
          <h3 class="font-semibold mb-2">Instalación rápida</h3>
          <p class="text-sm text-gray-200">Instalamos tu equipo en menos de 24h</p>
        </div>
        <div class="glass rounded-lg p-6 text-center">
          <Shield class="w-8 h-8 text-accent-400 mx-auto mb-3" />
          <h3 class="font-semibold mb-2">Garantía total</h3>
          <p class="text-sm text-gray-200">3 años de garantía en todos nuestros servicios</p>
        </div>
        <div class="glass rounded-lg p-6 text-center">
          <Award class="w-8 h-8 text-accent-400 mx-auto mb-3" />
          <h3 class="font-semibold mb-2">Técnicos certificados</h3>
          <p class="text-sm text-gray-200">Personal altamente cualificado</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white">
    <div class="animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>